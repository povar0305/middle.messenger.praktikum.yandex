{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "vite build",
    "serve": "vite preview",
    "start": "vite build && vite preview --port 3000 --host",
    "lint": "eslint **/*.ts && stylelint src/style/**.scss",
    "test": "jest",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "chai": "^5.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^15.5.2",
    "mocha": "^11.6.0",
    "postcss": "^8.5.3",
    "sass": "^1.86.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-scss": "^6.12.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.7.2",
    "vite": "6.3.4",
    "xhr-mock": "^2.5.1"
  },
  "dependencies": {
    "globals": "^16.0.0",
    "handlebars": "^4.7.8",
    "typescript-eslint": "^8.29.1",
    "uuid": "^11.1.0",
    "vite-plugin-handlebars": "1.0.3"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{css, scss}": "stylelint src/style/**.scss"
  }
}
