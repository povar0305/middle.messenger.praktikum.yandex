{
  "extends": [
    "stylelint-config-standard",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "forward"]
      }
    ],
    "declaration-property-value-no-unknown": [
      true,
      {
        "ignoreProperties": ["border-bottom"]
      }
    ]
  }
}
